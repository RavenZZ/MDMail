doctype html
html
    head
        title=title
        link(href='/css/index.css?v=#{v}',type='text/css',rel="stylesheet")
        link(href='/css/basic.css?v=#{v}',type='text/css',rel="stylesheet")
        script(src='/script/jquery-1.11.3.min.js',type='text/javascript')
