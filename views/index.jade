        script(type='text/javascript').
            var G = {};
            G.socket = null;
            G.Relation = '#{ename}';
            G.domain = '#{domain}';
            $(function () {
                G.socket = new Socket(function () {
                    console.log('connected');
                }, onNewMail);
            });
